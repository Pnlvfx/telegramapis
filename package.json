    "prepare": "husky",
    "prepack": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "update": "yarn upgrade-interactive",
    "publish": "node tools/publish.ts"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@goatjs/core": "^1.0.3",
